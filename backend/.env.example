# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/incentivos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=incentivos
DB_USER=your_user
DB_PASSWORD=your_password

# Database Pool Configuration
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=30.0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
# Enable AI-powered structured description generation during CSV loading
ENABLE_AI_GENERATION=false
# Model to use (gpt-4.1-mini for cost efficiency)
OPENAI_MODEL=gpt-4.1-mini
# Max cost target per incentive (for Phase 2 matching)
MAX_COST_PER_INCENTIVE=0.30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Logfire Configuration (Optional - for Pydantic AI observability)
# Get your token at https://logfire.pydantic.dev/
# LOGFIRE_TOKEN=your_logfire_token_here
# LOGFIRE_PROJECT_NAME=augusta-incentivos